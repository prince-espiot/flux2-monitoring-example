apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx
  namespace: kube-dash
spec:
  replicas: 3
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          image: nginx:latest
          ports:
            - containerPort: 8080
          volumeMounts:
            - name: nginx-config
              mountPath: /etc/nginx/conf.d
      volumes:
        - name: nginx-config
          configMap:
            name: nginx-config

---
apiVersion: v1
kind: Service
metadata:
  name: nginx-export
  namespace: kube-dash
spec:
  ports:
    - port: 8080
      targetPort: 8080
  selector:
    app: nginx

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: nginx-config
  namespace: kube-dash
data:
  default.conf: |
    server {
        listen 8080;
        location /stub_status {
            stub_status;
            allow udp and tcp; # Adjust as necessary
        }
    }

